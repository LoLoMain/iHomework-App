<h2>Join the easiest online planner today</h2>


<div class="row">
  <%# Left Side%>
  <%# <div class="col-xs-6 col-md-4">
    <img src="/images/success.jpg" alt="success">
  </div>%>

<%# Right Side%>
  <div class="col-xs-12 col-sm-6 col-md-8">
    <form action="/sign-up" method="post">

      <div class="form-group">
        <label for="first-name-input">First Name</label>
        <input  id="first-name-input" type="text" class="form-control" placeholder="Albert">
      </div>

      <div class="form-group">
        <label for="username-input"> Username </label>
        <input id="username-input" type="text" class="form-control"  placeholder="EinsteinMC2">
      </div>

      <div class="form-group">
        <label for="password-input">Password</label>
        <input id="password-input" type="password" class="form-control">
      </div>

      <div class="form-group">
        <label for="phone-number--input">Parent Phone Number</label>
        <input id="phone-number-input" type="number" class="form-control" placeholder="XXX-XXX-XXXX">
      </div>

      <div class="form-group">
        <label for="birthday-input">Birthday</label>
        <input id ="birthday-input" type="date" name="" min="2004-7-1" class="form-control">
      </div>

      <div class="checkbox">
       <label>
         <input type="checkbox"> By checking the box, I am 13 years or older OR have a parent's permission.***
       </label>
     </div>
     <div class="checkbox">
      <label>
        <input type="checkbox"> Click here to receive text message notifications. Message and data rates may apply.
      </label>
    </div>
     <br>
     <button type="submit" class="btn btn-default">Sign Up!</button>

    </form>
  </div>

</div>
