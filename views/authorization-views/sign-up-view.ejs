<div id="form-info">
  <div class="container">

    <div class="row" style="margin:60px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        	<form id="form" method="post" action="/sign-up">
    			<fieldset>
    				<h2>Sign Up to Join Today!</h2>


    				<div class="form-group">
              <label for="first-name-input">First Name:</label>
              <input id="first-name-input" type="text"  class="form-control input-lg" name="signupFirstName" placeholder="John">
    				</div>

            <div class="form-group">
               <label for="username-input">Username:</label>
               <input id="username-input" type="text" class="form-control input-lg" name="signupUsername" placeholder="JohnDoe">
            </div>

            <div class="form-group">
               <label for="password-input">Password:</label>
               <input id="password-input" type="password" class="form-control input-lg" type="password" name="signupPassword"
                placeholder= "**********">
            </div>

            <div class="form-group">
               <label for="birthday-input">Birthday:</label>
               <input id="birthday-input"type="date" class="form-control input-lg" name="signupBirthday">
            </div>

            <div class="checkbox">
               <label>
               <input type="checkbox"> By checking the box, I am 13 years or older.
               </label>
             </div>

    				<hr class="colorgraph">
    				<div class="row">
    					<div class="col-xs-6 col-sm-6 col-md-6">
                <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign Up">
    					</div>

    				</div>
    			</fieldset>
    		</form>
    	</div>
    </div>
  </div>
</div>
